<link rel="stylesheet" href="~/css/addArticle.css">
@model UserViewModel


<div class="modal fade" id="add-article-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addArticleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container-fluid header">
                    <h5 class="modal-title">Новая статья</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button> @*Кнопка закрытия окна*@
            </div>

            <form asp-action="AddNews" asp-controller="Profile" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                        <div class="article-title"> @*Название статьи*@
                            <label for="article-title-input" class="row">Название:</label>
                            <input type="text" id="article-title-input" class="row col-12" asp-for="@Model.NewNews.Title" placeholder="Введите название статьи..." maxlength="50">
                        </div>
                    
                        <div class="article-source"> @*Источник статьи*@
                            <label for="article-source-input" class="row">Источник:</label>
                            <input type="url" id="article-source-input" class="row col-12" asp-for="@Model.NewNews.Url" placeholder="Введите url источника...">
                        </div>

                        <div class="addPhoto">
                            <label for="article-photo-input" class="row">Фото:</label>
                            <input type="file" name="uploadedFile" accept=".png, .jpg, .jpeg" /><br>
                        </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary add-button" data-bs-dismiss="modal">Добавить статью</button> @*Кнопка добавления статьи*@
                </div>
            </form>
        </div>
    </div>
</div>