@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    bool isAutorized = Context.Request.Cookies.ContainsKey("iduser");
}

<ul class="navbar-nav navbar-dark">
@if (isAutorized)
{
    <li class="nav-item">
        <a class="nav-link" asp-action="Index" asp-controller="Profile">Личный кабинет</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#accept-exit-modal">Выйти</a>
        @Html.Partial("AcceptExitPartial")
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-action="Register" asp-controller="Profile">Зарегистрироваться</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Login" asp-controller="Profile">Войти</a>
    </li>
}
</ul>
