<link rel="stylesheet" href="/css/gamepage.css" asp-append-version="true">
@model Game
@{
    ViewData["Title"] = "Game";
}

<div class="gameContent">

    
        <div class="row justify-content-center">
            
            
            <div class="col-6">
                <h1 class="gameName d-inline-block row-cols-1">@Model.Title</h1> @*Нужно вставить название игры*@    
                @*Изображения*@
                <section class="images">
                    <div id="imagesCarousel" class="carousel slide container" data-bs-ride="carousel" style="padding:0;">
                        
                        <div class="carousel-inner">
                            @foreach(var img in Model.Images)
                            {
                                @if (img == Model.Images.First())
                                {
                                    <div class="carousel-item active">
                                        <img src="@img.Source" alt="/Images/defImg.png" class="d-block image"> @*Нужно вставить ссылки на изображения*@
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img src="@img.Source" alt="/Images/defImg.png" class="d-block image">  @*Нужно вставить ссылки на изображения*@
                                    </div>
                                }
                            }

                        <button class="carousel-control-prev" type="button" data-bs-target="#imagesCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Предыдущий</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#imagesCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Следующий</span>
                        </button>
                        </div>

                        

                        <div class="carousel-indicators" style="margin-bottom: 0;">
                            @for(int i=0; i<Model.Images.Count(); i++)
                            {
                                @if (i == 0)
                                {
                                    <button type="button" class="active" data-bs-target="#imagesCarousel" data-bs-slide-to="@i" aria-current="true" aria-label="Slide @i" style="width: 100px; height:auto;">
                                        <img class="d-block w-100 img-fluid indicators" src="@Model.Images[i].Source" /> @*Нужно вставить ссылки на изображения*@
                                    </button>
                                }
                                else
                                {
                                    <button type="button" data-bs-target="#imagesCarousel" data-bs-slide-to="@i" aria-current="true" aria-label="Slide @i" style="width: 100px; height:auto;">
                                        <img class="d-block w-100 img-fluid indicators" src="@Model.Images[i].Source" /> @*Нужно вставить ссылки на изображения*@
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </section>

                @*Описание*@
                <div class="description">
                    <p>@Model.Annotation</p> @*Нужно вставить описание игры*@
                </div>
            </div>

            <div class="col-4">
                <h1 class="row-cols-1"> </h1>
                <div class="card">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <button class="nav-link active" id="nav-systemRequirements-tab" data-bs-toggle="tab" data-bs-target="#nav-systemRequirements" type="button" aria-controls="nav-systemRequirements" aria-selected="true">Системные требования</button>
                            <button class="nav-link" id="nav-feedbacks-tab" data-bs-toggle="tab" data-bs-target="#nav-feedbacks" type="button" aria-controls="nav-feedbacks" aria-selected="false">Отзывы</button>
                            <button class="nav-link" id="nav-stores-tab" data-bs-toggle="tab" data-bs-target="#nav-stores" type="button" aria-controls="nav-stores" aria-selected="false">Магазины</button>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-systemRequirements" role="tabpanel" aria-labelledby="nav-systemRequirements-tab">
                            <p class="text-white systemRequirementsTitle">Минимальные:</p> 
                            <p class="systemRequirements">
                                <p class="systemRequirements">ОС: <span class="systemRequirements">@Model.Minimum?.OS</span></p> 
                                <p class="systemRequirements">Процессор: <span class="systemRequirements">@Model.Minimum?.Processor</span></p>
                                <p class="systemRequirements">ОЗУ: <span class="systemRequirements">@Model.Minimum?.Memory</span></p>
                                <p class="systemRequirements">Видеокарта: <span class="systemRequirements">@Model.Minimum?.Graphics_Card</span></p>
                                <p class="systemRequirements">Размер на жестком диске: <span class="systemRequirements">@Model.Minimum?.HDD_Space</span></p>
                            </p> @*Нужно вставить системные требования*@
                            <p class="text-white systemRequirementsTitle">Рекомендуемые:</p>
                            <p class="systemRequirements">
                                <p class="systemRequirements">ОС: <span class="systemRequirements">@Model.Recomended?.OS</span></p>
                                <p class="systemRequirements">Процессор: <span class="systemRequirements">@Model.Recomended?.Processor</span></p>
                                <p class="systemRequirements">ОЗУ: <span class="systemRequirements">@Model.Recomended?.Memory</span></p>
                                <p class="systemRequirements">Видеокарта: <span class="systemRequirements">@Model.Recomended?.Graphics_Card</span></p>
                                <p class="systemRequirements">Размер на жестком диске: <span class="systemRequirements">@Model.Recomended?.HDD_Space</span></p>
                            </p> @*Нужно вставить системные требования*@
                        </div>
                        <div class="tab-pane fade" id="nav-feedbacks" role="tabpanel" aria-labelledby="nav-feedbacks-tab">

                            @for (int i = 0; i < 5; i++)
                            {
                                <div class="card feedback">
                                    <div class="card-body feedback">
                                        <p class="userName">Имя пользователя</p> @*Нужно вставить имя пользователя*@
                                        <p class="feedback">Сюжет: <span class="feedback">Оценка ☆</span></p> @*Нужно вставить оценку сюжета*@
                                        <p class="feedback">Геймплей: <span class="feedback">Оценка ☆</span></p> @*Нужно вставить оценку геймплея*@
                                        <p class="feedback">Графика: <span class="feedback">Оценка ☆</span></p> @*Нужно вставить оценку графики*@
                                        <p class="feedback">Впечатление: <span class="feedback">Оценка ☆</span></p> @*Нужно вставить оценку впечатлений*@
                                        <p class="commentTitle">Комментарий:
                                            <p class="comment">Коментарий</p> @*Нужно вставить комментарий*@
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="tab-pane fade" id="nav-stores" role="tabpanel" aria-labelledby="nav-stores-tab">
                            Магазины @*Нужно вставить магазины*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>