<link rel="stylesheet" href="/css/loginpage.css" asp-append-version="true" />

@model GamePlay.Models.UserViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="card col-lg-4 col-12 col-md-6">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active registerLoginSwitch" aria-current="true">Вход</a>
            </li>
            <li class="nav-item">
                <a class="nav-link registerLoginSwitch" asp-action="Register" asp-controller="Profile">Регистрация</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="text-white">
            <section>
                <form asp-action="Login" asp-controller="Profile" method="post">
                    <p>Используйте свои данные для входа в аккаунт</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating login">
                        Логин
                        <input asp-for="User.Login" class="form-control" autocomplete="username" aria-required="true" style="padding:0;" />
                        <span asp-validation-for="User.Login" class="text-danger"></span>
                    </div>
                    <div class="form-floating password">
                        Пароль
                        <input type="password" asp-for="User.Password" class="form-control" autocomplete="current-password" aria-required="true" style="padding:0;" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>
                    @if (Model.ErrorMessage != null)
                    {
                        <p id="error-message">@Model.ErrorMessage</p>
                    }
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary login">Войти</button>
                    </div>
                    <div>
                        <p>
                            <a class="registerLink" asp-action="Register" asp-controller="Profile">Ещё не зарегистрированны?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
