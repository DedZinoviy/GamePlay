@page

<link rel="stylesheet" href="/css/loginpage.css" asp-append-version="true"/>
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="card col-lg-4 col-12 col-md-6">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link active registerLoginSwitch" aria-current="true">Вход</a>
          </li>
          <li class="nav-item">
            <a class="nav-link registerLoginSwitch" asp-page="./Register">Регистрация</a>
          </li>
        </ul>
    </div>
    <div class="card-body">
                <div class="text-white">
                        <section>

                            <form id="account" method="post">
                                <p>Используйте свои данные для входа в аккаунт</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating login">
                                    Логин
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="padding:0;" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    Пароль
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="padding:0;"/>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div>
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary login">Войти</button>
                                </div>
                                <div>
                                    <p>
                                        <a class="registerLink"asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Ещё не зарегистрированны?</a>
                                    </p>
                                </div>
                            </form>
                        </section>
                </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
