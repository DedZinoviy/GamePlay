@page

<link rel="stylesheet" href="/css/registerpage.css" asp-append-version="true">
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}



<div class="card col-lg-4 col-12 col-md-6">
    <div class="card-body">
        <h1 class="text-white">@ViewData["Title"]</h1>
        <div class="text-white">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <p>Создание нового аккаунта</p>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        Почта (Логин)
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="padding:0;"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        Пароль
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" style="padding:0;"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        Подтверждение пароля
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" style="padding:0;"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary register">Зарегистрироваться</button>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
