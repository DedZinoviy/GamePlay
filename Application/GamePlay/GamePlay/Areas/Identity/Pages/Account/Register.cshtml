@page

<link rel="stylesheet" href="/css/registerpage.css" asp-append-version="true">
<link rel="import" href="../Areas/Identity/Pages/Account/Register.cshtml">
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}



<div class="card col-lg-4 col-12 col-md-6">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link registerLoginSwitch" asp-page="./Login">Вход</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active registerLoginSwitch" aria-current="true">Регистрация</a>
          </li>
        </ul>
    </div>
            <div class="card-body">
                <div class="text-white">
                    <section>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <p>Создание нового аккаунта</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                Почта (Логин)
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="padding:0;"/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                Пароль
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" style="padding:0;"/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                Подтверждение пароля
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" style="padding:0;"/>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary register">Зарегистрироваться</button>
                            <div>
                                <p>
                                    <a class="loginLink" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Войти?</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
